/* pages/subscribe/subscribe.wxss */
.container {
  height: 95vh;
  margin-top: 3vh;
} 
.wrapper{
  height: 100vh;
  width: 100vw;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
}
.search_bd{
  height: 80vh;
  width: 80vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 30rpx;
  color: #AFB3AF;
}
.left_view{
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.userinfo-text{
    display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 3vw;
}
.userinfo-text-name{
  font-size: 30rpx;
  color: #646664;
}
.userinfo-text-motto{
  font-size: 22rpx;
  color: #AFB3AF;
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.userinfo{
   margin-bottom: 20rpx;
   width: 80vw;
   display: flex;
   flex-direction: column;
   align-items: center;
   border-radius: 30rpx;
   margin: 2vh 0 2vh 0;
   color: #fff;
   font-size: 30rpx;
   background: #979997;
   height: 20vh;
}
.sub_btn{
  display: flex;
  height: 50rpx;
  width: 100rpx;
  border-radius: 10%;
  color: #AFB3AF;
  font-size: 18rpx;
  line-height: 50rpx;
  margin: 0;
  align-items: center;
  justify-content: center;
}
.green{
  color: #45ce90
}
.top-view{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}
.bottom-view{
  display: flex;
  flex-direction: row;
    width: 100%;
  justify-content: flex-end;
  padding-top: 10rpx;
}
.top-nickname{
  margin: 30rpx 0 0 30rpx;
  font-size: 38rpx;
  font-weight: 600;
}
.top-switch{
  margin: 30rpx 30rpx 0 0;
}

.wechat-count{
  font-size: 25rpx;
  text-align: right;
  padding-right: 20rpx;
}
.sms-count{
  font-size: 25rpx;
  text-align: right;
  padding-right: 30rpx;
}
.count{
  font-size: 60rpx;
}
.count-text{
  opacity: 0.7;
}
.hidden-btn{
  background-color: transparent;
  padding: 0;
  color: #fff;
  border: none;
  text-align: right;
  line-height: unset;
}
.hidden-btn::after{
  border: none;
}
.notice{
  margin-top: 5vh;
  font-size: 26rpx;
  color: #AFB3AF;
}
.green-text{
  color: #45ce90;
}