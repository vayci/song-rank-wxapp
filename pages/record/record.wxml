<!--pages/record/record.wxml-->
<view class="record_container">
  <view class='container'><text class='tips'>{{tips}}</text></view>
  <view>
    <view class='box' wx:for="{{recordList}}" wx:for-item="recrod" wx:key="id">
        <view class='leftview'>
          <text class="record_text" wx:if="{{recrod.song.length<-1}}">处理过长歌曲名</text>
          <text class="record_text" wx:else>{{recrod.song}} - </text>
          <!-- <text class="record_text">{{recrod.song}}</text>- -->
          <text class="record_text">{{recrod.singer}}</text>
        </view>
        <view class='rightview'>
          <text class="record_text">{{recrod.changeTime}}</text>
          <!-- <text class="record_text">{{recrod.rankChange}}</text>-->
        </view>
  </view>
  </view>
</view>