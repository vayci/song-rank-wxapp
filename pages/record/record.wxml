<!--pages/record/record.wxml-->
  <view class='record_container'>
      <text class='tips_top'>{{tips}}</text>
  </view>

  <view class='wrapper'>
  <scroll-view class='record_list' scroll-y='true'>
    <!-- 无数据处理 -->
    <view class="img_box" wx:if="{{showImg}}">
    <image src="http://owkeg172k.bkt.clouddn.com/record.png" class="bd_img"></image>
    </view>

    <view class='box' wx:for="{{recordList}}" wx:for-item="recrod" wx:key="id">
        <view class='leftview'>
          <image src='../images/song.jpg' class='song_cover gray'></image>
          <view class='song_info'>
          <text class="record_song width_limit song_title">{{recrod.song}}</text>
          <text class="record_singer width_limit">{{recrod.singer}}</text>
          <text class="record_singer">{{recrod.changeTime}}</text>
          </view>
        </view>
        <view class='rightview'>
          <image src='../images/play.png' class='song_play_btn '></image>
        </view>
  </view>
</scroll-view>
</view>
