.page-body {
  width: 80%;
  /* box-shadow: 0px 0px 5px 5px #F17252; */
  color: #AFB3AF;
  font-size: 26rpx;
}
.payImg{
  width: 45vw;
  height: 45vw;
}
.foot{
  height: 20vh;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.foot_right{
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: flex-end;
  height: 15vh;
}
.text-box text{
  padding-bottom: 20rpx;
  letter-spacing: 4rpx;
}
.foot_right text{
  padding-bottom: 10rpx;
  letter-spacing: 4rpx;
}
.qrcode{
  width: 180rpx;
  height: 180rpx;
}
.text-box{
  height: 75vh;
}
.question_box{
  color: #646664;
  font-size: 30rpx;
  width: 80vw;
  font-weight:bold;
  margin-top: 3vh;
}
.wrapper{
  width: 100vw;
  display:flex;
  flex-direction:column;
  justify-content:space-between;
  align-items:center;
  height: 100vh;
}
.question{
  height: 8vh;
  line-height: 8vh;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.more_png{
  width: 40rpx;
  height: 40rpx;
}
.detail_box{
  display: flex;
  justify-content: center;
  flex-direction: column;
  width: 100vw;
  align-items: center;
}
.block{
  width: 80vw;
  font-size: 28rpx;
  color: #AFB3AF;
  padding: 15rpx 0 15rpx 0;
}
.title{
  color: #646664;
  font-weight: bold;
}
.account{
  margin-bottom: 5vh;
}